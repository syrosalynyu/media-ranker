<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-light bg-light">
    <%= link_to "Media Ranker", homepages_path, class:"navbar-brand" %>
  </nav>

  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "View top media", homepages_path, class:"navbar-brand" %>
      </li>
      <li class="nav-item">
        <%= link_to "View all media", works_path, class:"navbar-brand" %>
      </li>
      <li class="nav-item">
        <%= link_to "Add a new work", new_work_path, class:"navbar-brand" %>
      </li>
      <li class="nav-item">
        <%# link_to "View all users", users_path, class:"navbar-brand" %>
      </li>
      <% if session[:user_id] %>
      <li class="nav-item">
        <%= link_to "Logged in as #{session[:user_id]}", current_user_path, class:"navbar-brand" %>
      </li>
      <li class="nav-item">
        <%= link_to "Logout", logout_path, method: :post,class:"navbar-brand" %>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", login_path, class:"navbar-brand" %>
      </li>
      <% end %>
    </ul>
  </nav>

  <body>
  <section class="flash-msg m-3">
    <% flash.each do |name, message| %>
      <% if name != "error" %>
        <strong class="<%= name %> alert alert-success" role="alert">
          <%= message %>
        </strong>
      <% else %>
        <strong class="<%= name %> alert alert-warning" role="alert">
        <%= message %>
        </strong>
      <% end %>
    <% end %>
  </section>
    <%= yield %>
  </body>
</html>
