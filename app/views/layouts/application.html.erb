<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="jumbotron">
    <h1><%= link_to "Media Ranker", homepages_path %> | Ranking the Best of Everything</h1>

    <nav>
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <%= link_to "View top media", homepages_path, class:"navbar-brand" %>
        </li>
        <li class="nav-item">
          <%= link_to "View all media", works_path, class:"navbar-brand" %>
        </li>
        <li class="nav-item">
          <%= link_to "Add a new work", new_work_path, class:"navbar-brand" %>
        </li>
        <li class="nav-item">
          <%= link_to "View all users", users_path, class:"navbar-brand" %>
        </li>
        <% if session[:user_id] %>
          <li class="nav-item">
            <%= link_to "Logged in as #{@current_user.username}", user_path(id: session[:user_id]), class:"btn btn-outline-info mr-1" %>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", logout_path, method: :post, class:"btn btn-outline-info mr-1" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class:"btn btn-outline-info mr-1 align" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </header>
  
  <body>
    <section class="flash-msg m-3">
      <% flash.each do |name, message| %>
        <% if name != "error" %>
          <strong class="<%= name %> alert alert-success" role="alert">
            <%= message %>
          </strong>
        <% else %>
          <strong class="<%= name %> alert alert-warning" role="alert">
          <%= message %>
          </strong>
        <% end %>
      <% end %>
    </section>

    <section class="container-fluid p-3">
      <%= yield %>
    </section>  
  </body>

</html>
