<section class="container mt-3">
  <h2>List of Users</h2>

  <% if @users.length > 0 %>
    <table class="table">
      <tr>
        <th scope="col">Username</th>
        <th scope="col">Votes</th>
        <th scope="col">Joined</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td scope="row"><%= link_to user.username, user_path(user.id) %></th>
          <td><%= user.votes.size %></th>
          <td><%= user.created_at %></th>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>NO USERS</p>
  <% end %>
</section>